{% extends layout_template  %}

{% block title %}{{ 'user.resetYourPassword' | trans }}{% endblock %}

{% block content %}

    <h1>
        {{ 'user.chooseNewPassword' | trans | capitalize }}, {{ user.displayName }}
    </h1>

    {% if error %}
        <div class="alert alert-danger">{{ error|nl2br }}</div>
    {% endif %}

    <form class="form-horizontal" method="POST">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="input-password">{{ 'user.newPassword' | trans | capitalize }}</label>
            <div class="col-sm-8">
                <input class="form-control" name="password" type="password" id="input-password" required placeholder="{{ 'user.password' | trans | capitalize }}">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="input-confirm-password">{{ 'user.retypePassword' | trans | capitalize }}</label>
            <div class="col-sm-8">
                <input class="form-control" name="confirm_password" type="password" id="input-confirm-password" required placeholder="{{ 'user.retypePassword' | trans | capitalize }}">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
                <button type="submit" class="btn btn-primary">{{ 'user.savePassword' | trans | capitalize }}</button>
            </div>
        </div>
    </form>

{% endblock %}
