{% extends layout_template  %}

{% block title %}{{ 'user.editUser' | trans }}: {{ user.displayName }}{% endblock %}

{% block content %}

    <h1>{{ 'user.editUser' | trans }}: {{ user.displayName }}</h1>

    {% if error %}
        <div class="alert alert-danger">{{ error|nl2br }}</div>
    {% endif %}

    <form class="form-horizontal" method="POST">

        <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">
                {{ 'user.gravatarImage' | trans }}<br>
                <a href="http://gravatar.com">{{ 'user.change' | trans }}</a>
            </label>
            <div class="col-sm-8 form-control-static">
                <img src="{{ image_url }}"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ 'user.name' | trans }}</label>
            <div class="col-sm-8">
                <input class="form-control" name="name" type="text" id="input-name" placeholder="Name" value="{{ user.name }}">
                <p class="help-block">{{ 'user.shownPublicly' | trans }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="input-email">{{ 'user.email' | trans | capitalize }}</label>
            <div class="col-sm-8">
                <input class="form-control" name="email" type="email" id="input-email" placeholder="{{ 'user.email' | trans | capitalize }}" required value="{{ user.email }}">
                <p class="help-block">{{ 'user.neverShared' | trans }}</p>
            </div>
        </div>

        {% if isUsernameRequired or user.hasRealUsername %}
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-name">{{ 'user.username' | trans | capitalize }}</label>
                <div class="col-sm-8">
                    <input class="form-control" name="username" type="text" id="input-username" placeholder="{{ 'user.username' | trans | capitalize  }}" value="{{ user.realUsername }}">
                </div>
            </div>
        {% endif %}

        <div class="form-group">
            <label class="col-sm-2 control-label" for="input-password">{{ 'user.newPassword' | trans | capitalize }}</label>
            <div class="col-sm-8">
                <input class="form-control" name="password" type="password" id="input-password" placeholder="{{ 'user.newPassword' | trans | capitalize }}">
                <p class="help-block">{{ 'user.leavBlankExceptToChange' | trans }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="input-confirm-password">{{ 'user.confirm_password_label' | trans | capitalize }}</label>
            <div class="col-sm-8">
                <input class="form-control" name="confirm_password" type="password" id="input-confirm-password" placeholder="{{ 'user.confirm_password_label' | trans | capitalize }}">
            </div>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-roles">
                    Roles<br/>
                    <span class="text-muted" style="font-weight: normal;">({{ 'user.adminOnly' | trans }})</span>
                </label>
                <div class="col-sm-8">
                    <select class="form-control" multiple id="input-roles" name="roles[]">
                        {% for role in available_roles %}
                            <option value="{{ role }}" {% if user.hasRole(role) %}selected{% endif %}>{{ role }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        {% if customFields %}
            {% for field,label in customFields %}
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-{{ field }}">{{ label }}</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="input-{{ field }}" name="{{ field }}" value="{{ user.getCustomField(field) }}">
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
                <button type="submit" class="btn btn-primary">{{ 'user.save' | trans }}</button>
                <a style="margin-left: 10px;" href="{{ path('user.view', {'id': user.id}) }}">{{ 'user.backToProfile' | trans }}</a>
            </div>
        </div>

    </form>

{% endblock %}
