{% extends layout_template  %}

{% block title %}{{ 'user.emailConfirmationNeeded' | trans }}{% endblock %}

{% block content %}

    <h1>{{ 'user.accountNotYetActiveTitle' | trans }}</h1>
    {% autoescape false %}
        <p>{{ 'user.emailSentToAddressNoteWhenRegistered' | trans( '%email%' : email) }}</p>
    {% endautoescape %}
    <p>{{ 'user.clickLinkInMessageNote' | trans }}</p>

    <div style="margin: 20px 0px;">
        <form method="POST" action="{{ resendUrl }}">
            <input type="hidden" name="email" value="{{ email }}">
            <button type="submit" class="btn btn-default">{{ 'user.resendTheMessage' | trans }}</button>
        </form>
    </div>

    <p>{{ 'user.checkJunkEmailBox' | trans }}</p>

{% endblock %}
